extends layout

block content
  h1 Welcome to #{title}

  body
    form(method="post" action="/")
      div.form
        input(type="text", name="task" placeholder="enter task")
        input(type="submit")
    form(method="post" action="/modify")
      h3 Tasks
        for task in tasks
          div
            input.checkbox(name="task" id=task.id value=task.id type='checkbox')
            span(id=task.id name="edit" type="edit")= task.task
      div
        button(name="complete" type="complete") complete
        button(name="delete" type="delete") delete
